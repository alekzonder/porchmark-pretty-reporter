{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "esModuleInterop": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "types/**/*"
    ],
    "exclude": [
        "src/**/__spec__/**/*",
        "jest.config.js",
        "node_modules",
        "dist",
        "types"
    ]
}